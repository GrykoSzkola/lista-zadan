<%- include('../partials/header') %>

<form action="/tasks/<%= task.id || '' %>/edit" method="POST">
    <input type="text" name="title" value="<%= task.title %>" required> <br>
    <textarea name="description"><%= task.description %></textarea> <br>
    <select name="status">
        <option value="do zrobienia" <%= task.status === 'do zrobienia' ? 'selected' : '' %>>Do zrobienia</option>
        <option value="w toku" <%= task.status === 'w toku' ? 'selected' : '' %>>W toku</option>
        <option value="zakończone" <%= task.status === 'zakończone' ? 'selected' : '' %>>Zakonczone</option>
    </select> <br>
    <button type="submit">Zapisz</button>
</form>

<%- include('../partials/footer') %>
